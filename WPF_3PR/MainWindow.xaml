<Window x:Class="WPF_3PR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_3PR"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Name="Menu1">
            <MenuItem Header="Файл" Height="90" Width="120" FontSize="20" FontWeight="Bold">
                <MenuItem Name="Window_i" Header="Открыть" Click="MenuItem_Click"/>
                <MenuItem Name="Change_i" Header="Сменить цвет фона">
                    <MenuItem Name="Change_green" Header="Зеленый" Click="Change_green_Click"/>
                    <MenuItem Name="Change_red" Header="Красный" Click="Change_red_Click"/>
                    <MenuItem Name="Change_blue" Header="Синий" Click="Change_blue_Click"/>
                </MenuItem>
                <MenuItem Name="About_i" Header="О разработчике" Click="MenuItem_Click_1"/>
                <MenuItem Name="Exit_i" Header="Выход" Click="MenuItem_Click_2"/>
            </MenuItem>
            
        </Menu>
        </Grid>
</Window>
